<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuaishan.obtainmsg">
    <!-- 可选权限说明-->
    <uses-permission
        android:name="android.permission.INTERNET" />
<!--    允许应用程序联网（必须）-->
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE" />
<!--    允许访问WiFi网络状态信息（必须）-->
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE" />
<!--    允许读取手机状态（必须）-->
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE" />
<!--    允许访问网络状态（必须）-->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<!--    允许写手机存储（必须-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".core.App"
        android:networkSecurityConfig="@xml/network_security_config"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".account.LoginActivity"></activity>
        <activity android:name=".account.RegisterActivity"></activity>
        <activity android:name=".ui.home.MessagesActivity"></activity>
        <activity android:name=".RelationCreateActivity"></activity>

<!--        <receiver android:name="com.kuaishan.obtainmsg.core.SmsReciver" >-->
<!--            <intent-filter android:priority="2147483647">-->
<!--                <action android:name="android.provider.Telephony.SMS_RECEIVED" />-->
<!--            </intent-filter>-->
<!--        </receiver>-->


        <service android:name=".jpush.JService"
            android:enabled="true"
            android:exported="false"
            android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action" />
            </intent-filter>
        </service>
        <receiver
            android:name=".jpush.JReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />
                <category android:name="com.kuaishan.obtainmsg" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".jpush.MyReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.REGISTRATION" /> <!--Required  用户注册SDK的intent-->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED" /> <!--Required  用户接收SDK消息的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED" /> <!--Required  用户接收SDK通知栏信息的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED" /> <!--Required  用户打开自定义通知栏的intent-->
                <action android:name="cn.jpush.android.intent.CONNECTION" /><!-- 接收网络变化 连接/断开 since 1.6.3 -->
                <category android:name="com.kuaishan.obtainmsg" />
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
</manifest>