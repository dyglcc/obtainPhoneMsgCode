<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line_reg_phone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"></EditText>

<!--        <Button-->
<!--            android:id="@+id/btn_very"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="验证手机号"></Button>-->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:hint="给自己起个名儿"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:id="@+id/et_pass1"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:hint="请输入密码"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="wrap_content"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:id="@+id/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"></Button>todo,测试注册，测试login，测试关联帐号，然后监听并上报数据，拉取数据。
    </LinearLayout>
</LinearLayout>